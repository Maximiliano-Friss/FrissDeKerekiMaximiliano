extends index

block content
    div.w-75.mx-auto.mt-5
        - let productList = productos
        if productList.length
            table.table.table-success
                tr.h3
                    th Nombre
                    th Precio
                    th Thumbnail
                each prod in productList
                    - let image = prod.thumbnail
                    - let imageAlt = prod.nombre
                    tr
                        td!=prod.nombre
                        td!=prod.precio
                        td
                            img(src=image alt=imageAlt)
        else
            h3.alert.alert-danger No existen productos
        a.btn.mx-4.my-2.btn-success(href="./") Cargar un nuevo producto
