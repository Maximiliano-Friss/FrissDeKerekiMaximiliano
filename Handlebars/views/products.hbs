<div class="w-75 mx-auto mt-5">
    {{#if full}}
            <table class="table table-success">
                <tr class="h3"> <th>Nombre</th> <th>Precio</th> <th>Thumbnail</th> </tr>
                {{#each products}}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>{{this.precio}}</td>
                        <td><img src="{{this.thumbnail}}" alt="Icono ${{this.nombre}}"></td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
        <h3 class="alert alert-danger">No existen productos</h3>
    {{/if}}
    <a href="./" class="btn mx-4 my-2 btn-success">Cargar un nuevo producto</a>
</div>

